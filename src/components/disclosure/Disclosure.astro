---
import { Icon } from "astro-icon/components";
import Tag from "../tag/Tag.astro";

const { className, company, date, open = false, tag, title } = Astro.props;
---

<details class="disclosure group" open={open}>
  <summary
    class={`flex flex-row flex-grow justify-between items-center gap-4 summary`}
  >
    <div class="flex flex-grow justify-between items-center gap-4">
      <div class="flex gap-4 items-center">
        <div class="flex flex-col">
          <h3 class="font-normal text-2xl">{title}</h3>
          {
            company && (
              <h4 class="text-[rgba(var(--primary-color), 1)]">@ {company}</h4>
            )
          }
        </div>
        {tag && <Tag className="text-xs">{tag}</Tag>}
      </div>
      <p class="font-light">{date}</p>
    </div>
    <Icon
      name="chevron-down"
      size={20}
      class="flex-shrink-0 inline group-open:hidden"
      aria-hidden
    />
    <Icon
      name="chevron-up"
      size={20}
      class="flex-shrink-0 hidden group-open:inline"
      aria-hidden
    />
  </summary>
  <div class={`${className || ""} content`}>
    <slot />
  </div>
</details>

<style>
  .disclosure {
    background-color: rgba(var(--floating-color), 1);
    border: 3px solid rgba(var(--floating-color), 1);
    border-radius: 1.5rem;
    inline-size: 100%;
    box-shadow: 0 1px 4px rgba(var(--shadow-color));
  }
  .summary {
    border-radius: 1.5rem;
    border: 3px solid rgba(var(--floating-color), 1);
    background-color: rgba(var(--floating-color), 1);
    min-inline-size: 100%;
    padding: 1.5rem;
    cursor: pointer;
  }

  .summary:hover {
    outline: 3px solid rgba(var(--primary-color), 1);
  }

  .summary:focus-visible {
    outline: 3px dashed rgba(var(--secondary-color), 1);
    outline-offset: 4px;
  }

  .content {
    background-color: rgba(var(--background), 1);
    border-radius: 0 0 1.5rem 1.5rem;
  }

  details summary::-webkit-details-marker {
    display: none;
  }
</style>
