---
interface TagProps {
  /** type of the tag */
  tagType?: "primary" | "secondary" | "tertiary";
  /** additional inline style */
  style?: string; // Use string for inline styles
  /** extra className */
  className?: string;
}

const { tagType = "primary", style, className = "" } = Astro.props as TagProps;
---

<div class={`tag ${tagType} ${className}`} style={style}>
  <slot />
</div>
<style>
  .tag {
    border-radius: 1.5rem;
    border-width: 2px;
    display: flex;
    padding-inline: 0.75rem;
    padding-block: 0.25rem;
    align-items: center;
  }

  .primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
    color: var(--background);
  }

  .secondary {
    background-color: var(--background-color);
    border-color: var(--primary-color);
    color: var(--primary-color);
  }

  .tertiary {
    background-color: var(--ambience-color);
    border-color: var(--ambience-color);
    color: var(--secondary-color);
  }
</style>
