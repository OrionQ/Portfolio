---
import BackToTop from "../components/back-to-top/BackToTop.astro";
import Footer from "../section/Footer.astro";
import Header from "../section/Header.astro";
import "../themes/themes.css"; // adjust path as needed

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex flex-col items-center pb-16">
      <Header />
      <div class="justify-between min-h-screen px-4 pt-6 gap-16">
        <main
          class="flex flex-col gap-8 items-center sm:px-10 max-w-6xl"
        >
          <slot />
        </main>
        <Footer />
      </div>
    </div>
    <BackToTop />

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("opacity-100", "translate-y-0");
                entry.target.classList.remove("opacity-0", "translate-y-10");
              }
            });
          },
          {
            threshold: 0.2, // Trigger when 20% of the element is visible
          }
        );

        // Select all scroll-content elements to observe
        document
          .querySelectorAll(".scroll-content")
          .forEach((el) => observer.observe(el));
      });
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".scroll-link").forEach((link) => {
          link.addEventListener(
            "click",
            function (this: HTMLAnchorElement, event) {
              const isHomePage = window.location.pathname === "/";
              if (isHomePage) {
                event.preventDefault(); // Prevent default jump
              }
              const href = this.getAttribute("href");
              const targetId = this.getAttribute("href")?.substring(1);
              const target = targetId
                ? document.getElementById(targetId)
                : null;
              const offset = 150; // Adjust this value based on your header height

              if (target) {
                const topPosition = target.offsetTop - offset;
                window.scrollTo({ top: topPosition, behavior: "smooth" });
              }
            }
          );
        });
      });
    </script>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  html {
    scroll-behavior: smooth;
  }

  :root {
    /* Light Mode */
    --background: 255, 255, 255; /* #ffffff */
    --foreground: 0, 49, 73; /* #003149 */
    --primary-color: 0, 125, 179; /* #007db3 */
    --secondary-color: 0, 90, 132; /* #005a84 */
    --floating-color: 237, 248, 252; /* #edf8fc */
    --ambience-color: 181, 223, 241; /* #b5dff1 */
    --tint-color: 0, 110, 158; /* #006e9e */
    --shadow-color: 0, 0, 0, 0.15;
  }

  :root.dark {
    /* Dark Mode */
    --background: 39, 39, 39; /* #272727 */
    --foreground: 229, 245, 251; /* #e5f5fb - light, readable text */
    --primary-color: 102, 204, 238; /* #66ccee - brighter primary */
    --secondary-color: 153, 218, 243; /* #99daf3 - lighter secondary for better contrast */
    --floating-color: 55, 80, 95; /* #37505f */
    --ambience-color: 0, 100, 150; /* #006496 - brighter ambient */
    --tint-color: 102, 204, 238; /* #66ccee */
    --shadow-color: 0, 0, 0, 0.5;
  }

  body {
    color: rgba(var(--foreground), 1);
    background: rgba(var(--background), 1);
    font-family: "Gabarito", Arial, Helvetica, sans-serif;
    font-size: 1rem;
  }

  @layer utilities {
    .text-balance {
      text-wrap: balance;
    }
  }
</style>
