---
import Card from "../components/card/Card.astro";
import Link from "../components/link/Link.astro";
import Tag from "../components/tag/Tag.astro";
---

<div
  class="flex flex-row flex-wrap lg:flex-nowrap gap-12 w-full pt-12 pb-8"
  id="education"
>
  <div
    class="flex flex-col items-center lg:items-end lg:basis-1/5 justify-start gap-2"
  >
    <h2 class="text-2xl">Education</h2>
    <p
      style={{
        fontWeight: "500",
        fontSize: "2rem",
        color: "rgba(var(--primary-color), 1)",
        lineHeight: "normal",
      }}
      class="flex flex-wrap items-center text-center lg:text-end"
    >
      Once a Wolfpack, now a Longhorn.
    </p>
  </div>
  <div
    class="education flex flex-col gap-4 justify-center items-center w-full flex-1 min-w-0"
  >
    <Card cardType="secondary" className="flex gap-4 w-full justify-between">
      <div class="flex-col">
        <h3 class="text-xl">University of Texas at Austin</h3>
        <Link href="https://www.ischool.utexas.edu/" newTab underline
          >M.S. Information Studies</Link
        >
        <span>Human-Computer Interaction & UX Design</span>
      </div>
      <div class="flex items-center">
        <Tag className="text-xs">Current</Tag>
      </div>
      <p class="flex flex-col justify-center text-end">
        <span>Aug 2024 - May 2026 (expected)</span>
      </p>
    </Card>
    <Card cardType="secondary" className="flex gap-4 w-full justify-between">
      <div class="flex-col">
        <h3 class="text-xl">North Carolina State University</h3>
        <Link href="https://www.csc.ncsu.edu/" newTab underline
          >B.S. Computer Science</Link
        >
        Minor in Art & Design
      </div>
      <div class="flex items-center"></div>
      <p class="flex flex-col justify-center text-end">
        <span>Aug 2017 - May 2021</span>
      </p>
    </Card>
  </div>
</div>
