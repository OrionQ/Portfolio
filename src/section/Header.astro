---
import { Icon } from "astro-icon/components";
import Link from "../components/link/Link.astro";
import ThemeSelector from "../components/theme-selector/ThemeSelector.astro";

const isHomePage = Astro.url.pathname === "/";
---

<script>
  // Auto-close mobile menu when clicking on links or outside the menu
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenu = document.querySelector(".mobile-menu");
    const mobileLinks = document.querySelectorAll(".mobile-link");

    // Close menu when clicking on links
    mobileLinks?.forEach((link) => {
      link.addEventListener("click", () => {
        if (mobileMenu) mobileMenu.removeAttribute("open");
      });
    });

    // Close menu when clicking outside
    document.addEventListener("click", (event) => {
      if (mobileMenu?.hasAttribute("open") && !mobileMenu.contains(event.target as Node)) {
        mobileMenu.removeAttribute("open");
      }
    });
  });
</script>

<nav
  class="header lg:px-10 px-4 py-2 sticky top-0 flex flex-col lg:px-30 max-w-6xl w-full"
>
  <div class="flex justify-between flex-row items-center gap-8">
    <div>
      <a href="/" class="flex gap-4 items-center home-link">
        <Icon
          name="orion-logo"
          size={24}
          color="rgba(var(--primary-color), 1)"
        />
        Xiaolei Qin
      </a>
    </div>

    <!-- Desktop Navigation -->
    <div class="flex gap-6 flex-row items-center">
      <div class="gap-8 items-center hidden sm:flex sm:flex-row">
        <Link
          href={isHomePage ? "#projects" : "/#projects"}
          className="scroll-link">Projects</Link
        >
        <Link
          href={isHomePage ? "#experience" : "/#experience"}
          className="scroll-link">Experience</Link
        >
        <Link
          href={isHomePage ? "#about-me" : "/#about-me"}
          className="scroll-link">About Me</Link
        >
      </div>
      <ThemeSelector />
      <!-- Mobile Menu Button -->
      <details class="sm:hidden mobile-menu">
        <summary class="mobile-menu-button">
          <Icon name="bars" size={24} class="menu-icon" />
          <Icon name="xmark" size={24} class="close-icon" />
        </summary>
        <div class="mobile-menu-content">
          <Link
            href={isHomePage ? "#projects" : "/#projects"}
            className="scroll-link">Projects</Link
          >
          <Link
            href={isHomePage ? "#experience" : "/#experience"}
            className="scroll-link">Experience</Link
          >
          <Link
            href={isHomePage ? "#about-me" : "/#about-me"}
            className="scroll-link">About Me</Link
          >
        </div>
      </details>
    </div>
  </div>

  <style>
    .header {
      background-color: rgba(var(--background), 0.8);
      backdrop-filter: blur(10px);
      border-radius: 9999px;
      border: 1px solid rgba(var(--floating-color), 1);
      box-shadow: 0 2px 12px rgba(var(--shadow-color));
      inset-block-start: 16px;
      z-index: 1000;

      &:has(.mobile-menu[open]) {
        background-color: rgba(var(--background), 1);
        backdrop-filter: none;
        border-radius: 1.75rem 1.75rem 0 0;
      }
    }

    @media (max-width: 72rem) {
      .header {
        margin-inline: 1rem;
        width: calc(100% - 2rem);
      }
    }

    .home-link:focus-visible {
      outline: 2px dashed rgba(var(--secondary-color), 1);
    }

    .mobile-menu {
      position: relative;
    }

    .mobile-menu-button {
      border: 0;
      border-radius: 50%;
      cursor: pointer;
      list-style: none;
      padding: 0.5rem;
      transition: background-color 0.25s;
    }

    .mobile-menu-button svg {
      color: rgba(var(--primary-color), 1);
    }

    .mobile-menu-button::-webkit-details-marker {
      display: none;
    }

    .mobile-menu-button:focus-visible {
      outline: 2px dashed rgba(var(--secondary-color), 1);
    }

    .mobile-menu-button:hover {
      background-color: rgba(var(--ambience-color), 1);
    }

    .mobile-menu[open] .menu-icon {
      display: none;
    }

    .mobile-menu:not([open]) .close-icon {
      display: none;
    }

    .mobile-menu-content {
      background-color: rgba(var(--background), 0.85);
      backdrop-filter: blur(10px);
      border-color: rgba(var(--floating-color), 1);
      border-width: 0px 1px 1px 1px;
      border-radius: 0 0 1.75rem 1.75rem;
      box-shadow: 0 4px 6px rgba(var(--shadow-color));
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      justify-content: center;
      left: 1rem;
      padding-block: 1rem 1rem;
      padding-inline: 1.25rem;
      position: fixed;
      inset-inline-end: 1rem;
      inset-block-start: 4.25rem;
      width: calc(100% - 2rem);
      z-index: 999;
    }
  </style>
</nav>
